<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorPrimary"
    tools:ignore="AdapterViewChildren,RtlSymmetry">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_remove_registration"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"
        app:borderWidth="0dp"
        app:elevation="1dp"
        app:fabCustomSize="20dp"
        app:maxImageSize="15dp"
        app:pressedTranslationZ="1dp"
        app:srcCompat="@drawable/ic_dialog_close_dark" />

    <LinearLayout
        android:id="@+id/home_grid_layout_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/grid_car_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/grid_parking_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="#D3D3D3" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
